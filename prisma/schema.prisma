// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  Guest
}

enum StatusBanner {
  Active
  Inactive
  InDraft @map("In draft")
}

enum BannerPage {
  Home @map("Home")
  Popup @map("Pop up")
  Learn @map("Learn to earn")
  Shop @map("Shop to earn")
  Play @map("Play to earn")
  Mission @map("Mission to earn")
  Read @map("Read to earn")
  Install @map("Install to earn")
}

enum BannerType {
  HomeBanner @map("Home banner")
  TopPick @map("Top pick banner")
  MiddleBanner @map("Middle banner")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique 
  password  String
  name  String
  role  Role @default(Guest)
  refreshToken String?
  createAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Category {
  id  Int @id @default(autoincrement())
  name String
  nameVN String
  shops Shop[]
  createAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Product {
  id  Int @id @default(autoincrement())
  image String
  linkAffilitate String
  linkProduct String
  merchant String
  discountRate Int
  name String
  description String
  price Int
  discountAmount Int
  discount Int
  createAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Shop {
  id  Int @id @default(autoincrement())
  logo String
  name String
  max_com String
  url String
  action_point String
  commission_policy String
  cookie_policy String
  introduction String
  other_notice String
  rejected_reason String
  traffic_building_policy String
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])
  createAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Banner {
  id  Int @id @default(autoincrement())
  image String
  landingPageUrl String
  bannerPosition Int
  bannerPage BannerPage
  bannerType BannerType
  airTimeCreate DateTime
  airTimeEnd DateTime
  status StatusBanner @default(Inactive)
  createAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Content {
  id Int @id @default(autoincrement())
  categorylv1 String
  categorylv2 String
  commissionModel String
  commissionType String
  commissionValue String
  image String
  title String
  description String
  location String
  url String
  createAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
